<modification>
    <name>Advanced product filter</name>
    <code>APF2-0</code>
    <version>2.0</version>
    <author>Reemon</author>
    <file path="admin/controller/common/header.php">
        <operation>
            <search><![CDATA[
            $data['product'] = $this->url->link('catalog/product', 'token=' . $this->session->data['token'] . '&filter_quantity=0', 'SSL');
            ]]></search>
            <add position="replace"><![CDATA[
            $data['product'] = $this->url->link('module/product_filter/getList', 'token=' . $this->session->data['token'], 'SSL');
            ]]></add>
        </operation>
    </file> 
